---
import BaseLayout from "@/layouts/BaseLayout.astro";
import config from "../../explainer.config";
---

<BaseLayout title={`Page not found â€¢ ${config.projectName}`} description="The page you're looking for doesn't exist.">
  <main class="flex-1 flex items-center justify-center px-4 py-24">
    <div class="text-center max-w-md">
      <p class="text-7xl font-bold text-primary">404</p>
      <h1 class="mt-4 text-2xl font-semibold text-foreground">Page not found</h1>
      <p class="mt-2 text-muted-foreground">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <div class="mt-8 flex items-center justify-center gap-4">
        <a
          href="/"
          class="inline-flex items-center gap-2 rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground hover:bg-primary/90 transition-colors"
        >
          Go home
        </a>
        <a
          href={`/docs/${""}`}
          class="inline-flex items-center gap-2 rounded-md border px-4 py-2 text-sm font-medium text-foreground hover:bg-accent transition-colors"
        >
          Browse docs
        </a>
      </div>
    </div>
  </main>
</BaseLayout>
